<h1 class="sectionTitle"> <%= contentOwner.name %>'s photo galleries</h1>



        <div id="photoGallery">
            
   
    <% albumList  && albumList.forEach((album)=>{ %>
        <% if(album.alb_coverPhoto.coverFileName){%>
         <% var photopath = '../../uploads/' +album.alb_coverPhoto.coverFileName%>
            <%  } else { %>
               <% var photopath = "/images/folder-2103508_1280.png" %>
            <%}%>
            <a href="/albums/<%= album._id %>">
               <img
                  class="justifiedGalImg"
                  alt="<%=  album.alb_Name %>"
                  src="<%= photopath %>"
               />
            </a>
          
            <%})%>
          </div>

